            <!--#endregion-->

            <ContentControl x:Name="content" Grid.Column="1">
                <local:UsersPage/>
            </ContentControl>

            <StackPanel Grid.Column="0"
                        Background="Transparent">
                <RadioButton Content="Запись пациента"
