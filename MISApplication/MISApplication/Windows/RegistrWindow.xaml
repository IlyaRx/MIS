<Window x:Class="MISApplication.Windows.RegistrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:MISApplication"
        WindowState="Maximized" WindowStyle="None" ResizeMode="CanResizeWithGrip"
        Height="1024" Width="1440"
        Title="Регистратура">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44"/>
            <RowDefinition Height="107"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="334"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"
                        Background="{StaticResource beigeLight}">
                <RadioButton Content="Запись пациента"
                             Style="{StaticResource radButMain}"
                             IsChecked="True"/>
                <RadioButton Content="Госпитализация"
                             Style="{StaticResource radButMain}"/>
                <RadioButton Content="Регистрация ЭМК"
                             Style="{StaticResource radButMain}"/>
            </StackPanel>
        </Grid>
        
        <!--#region шапка-->
        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="/Resourse/ImageHader.png" Stretch="UniformToFill"/>
            </Grid.Background>

            <Ellipse x:Name="ikon"
                     Width="69" Height="69" Stroke="Black"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="17 0 0 0">
